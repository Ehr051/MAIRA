# MAIRA Configuration Environment Variables - EXAMPLE
# ===================================================
# Copia este archivo como .env y configura tus valores

# Database Configuration
# -----------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=maira_db
DB_USER=postgres
DB_PASSWORD=tu_password_local

# Flask Configuration
# -------------------
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=cambia_esta_clave_secreta

# Server Configuration
# --------------------
PORT=5000
HOST=0.0.0.0

# SocketIO Configuration
# ----------------------
SOCKETIO_DEBUG=False
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Security
# --------
BCRYPT_ROUNDS=12

# Application Settings
# --------------------
MAX_PARTIDAS=100
MAX_JUGADORES_PARTIDA=8
TIMEOUT_CONEXION=30

# Development Settings
# --------------------
USE_LOCAL_DB=True
BYPASS_AUTH=False
ENABLE_DEBUG_LOGS=True

# URLs del servidor (legacy)
CLIENT_URL=http://localhost:8080
SERVER_URL=http://localhost:10000

# Base de datos local XAMPP (desarrollo)
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=maira
MYSQL_PORT=3306

# Configuración de producción (comentadas para desarrollo)
# MYSQL_HOST=tu-host-produccion
# MYSQL_USER=tu-usuario-produccion  
# MYSQL_PASSWORD=tu-password-produccion
# MYSQL_DATABASE=maira
# MYSQL_PORT=3306

# Claves secretas
SECRET_KEY=maira-development-key-2024

# Configuración Socket.IO
SOCKET_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
