  "algoritmo_agregacion": {
    "descripcion": "Cálculo bottom-up de dotaciones totales",
    "pasos": [
      "1. Resolver composicion.personal[] multiplicando dotacion_diaria × cantidad",
      "2. Resolver composicion.tripulacion_vehiculos[] igual que personal",
      "3. Resolver composicion.subunidades[] recursivamente (buscar plantilla → calcular)",
      "4. Resolver composicion.vehiculos[] sumando dotacion_inicial de cada vehículo",
      "5. Sumar todos los resultados anteriores → dotacion_agregada"
    ],
    "ejemplo": {
      "input": "seccion_mecanizada_m113",
      "calculo": {
        "jefe_seccion": {
          "agua": 3.5,
          "viveres": 3,
          "municion_762": 300,
          "municion_9mm": 45
        },
        "subunidad_1_grupo_mecanizado": {
          "agua": 45.5,
          "viveres": 39,
          "municion_762": 3900,
          "municion_127": 2000,
          "municion_9mm": 90,
          "gasoil": 360
        },
        "subunidad_2_grupo_mecanizado": {
          "agua": 45.5,
          "viveres": 39,
          "municion_762": 3900,
          "municion_127": 2000,
          "municion_9mm": 90,
          "gasoil": 360
        },
        "subunidad_3_grupo_mecanizado": {
          "agua": 45.5,
          "viveres": 39,
          "municion_762": 3900,
          "municion_127": 2000,
          "municion_9mm": 90,
          "gasoil": 360
        },
        "total": {
          "agua": 140.0,
          "viveres": 120,
          "municion_762": 12000,
          "municion_127": 6000,
          "municion_9mm": 315,
          "gasoil": 1080
        }
      }
    }
  },
  
