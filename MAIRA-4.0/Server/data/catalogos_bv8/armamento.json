  "notas_implementacion": [
    "alcance_efectivo: distancia donde probabilidad impacto > 70%",
    "alcance_maximo: distancia máxima teórica del proyectil",
    "cadencia_disparo: disparos por minuto (rpm)",
    "danio: escala 0-100 (100 = destrucción total garantizada)",
    "vs_personal: daño contra infantería sin protección",
    "vs_blindado_ligero: daño contra vehículos <30mm blindaje",
    "vs_blindado_pesado: daño contra tanques >50mm blindaje",
    "vs_aereo: eficacia contra helicópteros/aviones",
    "penetracion_mm: milímetros de blindaje penetrados (AT)",
    "radio_explosion: metros de radio letal",
    "precision: probabilidad impacto por rango de distancia",
    "cajon_id: referencia a cajones.json de BV8",
    "usuarios: roles que pueden usar el arma (roles_personal.json)",
    "tripulacion: cantidad de personal necesario para operar"
  ]
}
