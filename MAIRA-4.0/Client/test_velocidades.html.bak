<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Sistema de Velocidades</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #1e1e1e;
            color: #d4d4d4;
        }
        h1 {
            color: #4ec9b0;
            border-bottom: 2px solid #4ec9b0;
            padding-bottom: 10px;
        }
        h2 {
            color: #569cd6;
            margin-top: 30px;
        }
        .test-section {
            background: #252526;
            border: 1px solid #3e3e42;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
        }
        .input-group {
            margin: 15px 0;
        }
        label {
            display: inline-block;
            width: 150px;
            color: #9cdcfe;
        }
        select, input {
            padding: 8px;
            background: #3c3c3c;
            border: 1px solid #555;
            color: #d4d4d4;
            border-radius: 4px;
            width: 300px;
        }
        button {
            background: #0e639c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            margin: 10px 5px;
            font-size: 14px;
        }
        button:hover {
            background: #1177bb;
        }
        button.success {
            background: #16825d;
        }
        button.success:hover {
            background: #1a9870;
        }
        .result {
            background: #1e1e1e;
            border-left: 4px solid #4ec9b0;
            padding: 15px;
            margin: 15px 0;
            border-radius: 4px;
        }
        .result h3 {
            margin-top: 0;
            color: #4ec9b0;
        }
        .result pre {
            background: #0d0d0d;
            padding: 10px;
            border-radius: 4px;
            overflow-x: auto;
            color: #ce9178;
        }
        .metric {
            display: inline-block;
            margin: 10px 20px 10px 0;
            padding: 10px 15px;
            background: #264f78;
            border-radius: 6px;
        }
        .metric-label {
            font-size: 12px;
            color: #9cdcfe;
        }
        .metric-value {
            font-size: 24px;
            font-weight: bold;
            color: #4ec9b0;
        }
        .metric-unit {
            font-size: 14px;
            color: #d4d4d4;
        }
        .status {
            padding: 5px 10px;
            border-radius: 4px;
            display: inline-block;
            margin: 5px;
        }
        .status.ok { background: #16825d; }
        .status.error { background: #f48771; }
        .status.warning { background: #cca700; }
        .log {
            background: #0d0d0d;
            border: 1px solid #3e3e42;
            border-radius: 4px;
            padding: 10px;
            max-height: 300px;
            overflow-y: auto;
            font-family: 'Courier New', monospace;
            font-size: 12px;
        }
        .log-entry {
            margin: 2px 0;
            padding: 2px 5px;
        }
        .log-entry.success { color: #4ec9b0; }
        .log-entry.error { color: #f48771; }
        .log-entry.info { color: #9cdcfe; }
    </style>
</head>
<body>
    <h1>üß™ Test Sistema de Velocidades y C√°lculo de Marcha</h1>

    <!-- Estado de carga -->
    <div class="test-section">
        <h2>üì¶ Estado de Carga</h2>
        <div id="loadStatus"></div>
    </div>

    <!-- Test 1: Velocidades Base -->
    <div class="test-section">
        <h2>Test 1: Cargar Velocidades Base</h2>
        <button onclick="testCargarVelocidades()">Cargar velocidadesBase.json</button>
        <div id="resultVelocidades"></div>
    </div>

    <!-- Test 2: Detectar Tipo de Elemento -->
    <div class="test-section">
        <h2>Test 2: Detectar Tipo de Elemento</h2>
        <div class="input-group">
            <label>Tipo de Elemento:</label>
            <select id="tipoElemento">
                <option value="Blindada">Blindada</option>
                <option value="Mecanizada">Mecanizada</option>
                <option value="Motorizada">Motorizada</option>
                <option value="Infanteria">Infanter√≠a (a pie)</option>
                <option value="Artilleria Remolcada">Artiller√≠a Remolcada</option>
            </select>
        </div>
        <button onclick="testDeteccionTipo()">Detectar y Obtener Velocidad</button>
        <div id="resultDeteccion"></div>
    </div>

    <!-- Test 3: Simular Elemento Completo -->
    <div class="test-section">
        <h2>Test 3: Simular Elemento con Datos Completos</h2>
        <div class="input-group">
            <label>Designaci√≥n:</label>
            <input type="text" id="designacion" value="Cia Explor Blin 1">
        </div>
        <div class="input-group">
            <label>Tipo:</label>
            <input type="text" id="tipoCompleto" value="Blindada">
        </div>
        <div class="input-group">
            <label>Dependencia:</label>
            <input type="text" id="dependencia" value="BV 8">
        </div>
        <button onclick="testElementoCompleto()">Simular Elemento</button>
        <div id="resultElemento"></div>
    </div>

    <!-- Test 4: C√°lculo de Marcha Simulado -->
    <div class="test-section">
        <h2>Test 4: C√°lculo de Marcha (Simulaci√≥n)</h2>
        <div class="input-group">
            <label>Tipo de Unidad:</label>
            <select id="tipoUnidadMarcha">
                <option value="blindado">Blindado (40 km/h)</option>
                <option value="mecanizado">Mecanizado (35 km/h)</option>
                <option value="motorizado">Motorizado (60 km/h)</option>
                <option value="apie">A Pie (4 km/h)</option>
            </select>
        </div>
        <div class="input-group">
            <label>Distancia (km):</label>
            <input type="number" id="distanciaKm" value="25" step="0.1">
        </div>
        <div class="input-group">
            <label>Factor Terreno:</label>
            <input type="number" id="factorTerreno" value="1.2" step="0.1" min="1.0" max="3.0">
            <small style="color: #858585; margin-left: 10px;">
                1.0 = terreno plano, 1.2 = leve pendiente, 1.5 = terreno dif√≠cil
            </small>
        </div>
        <button onclick="testCalculoMarcha()">Calcular Tiempo y Combustible</button>
        <div id="resultMarcha"></div>
    </div>

    <!-- Console Log -->
    <div class="test-section">
        <h2>üìã Console Log</h2>
        <button onclick="clearLog()">Limpiar Log</button>
        <div id="consoleLog" class="log"></div>
    </div>

    <!-- Scripts -->
    <script src="/js/utils/velocidadUtils.js"></script>
    
    <script>
        // Capturar console.log
        const originalLog = console.log;
        const originalError = console.error;
        const logDiv = document.getElementById('consoleLog');

        function addLog(message, type = 'info') {
            const entry = document.createElement('div');
            entry.className = `log-entry ${type}`;
            entry.textContent = `[${new Date().toLocaleTimeString()}] ${message}`;
            logDiv.appendChild(entry);
            logDiv.scrollTop = logDiv.scrollHeight;
        }

        console.log = function(...args) {
            originalLog.apply(console, args);
            const message = args.join(' ');
            const type = message.includes('‚úÖ') ? 'success' : 
                        message.includes('‚ùå') ? 'error' : 'info';
            addLog(message, type);
        };

        console.error = function(...args) {
            originalError.apply(console, args);
            addLog(args.join(' '), 'error');
        };

        function clearLog() {
            logDiv.innerHTML = '';
        }

        // Test 1: Cargar velocidades
        async function testCargarVelocidades() {
            console.log('üîÑ Iniciando carga de velocidadesBase.json...');
            const resultDiv = document.getElementById('resultVelocidades');
            
            try {
                const data = await window.cargarVelocidadesBase();
                console.log('‚úÖ Velocidades cargadas exitosamente');
                
                resultDiv.innerHTML = `
                    <div class="result">
                        <h3>‚úÖ Velocidades Cargadas</h3>
                        <div>
                            <div class="metric">
                                <div class="metric-label">Tipos de Veh√≠culos</div>
                                <div class="metric-value">${Object.keys(data.vehiculos).length}</div>
                            </div>
                            <div class="metric">
                                <div class="metric-label">Tipos de Personal</div>
                                <div class="metric-value">${Object.keys(data.personal).length}</div>
                            </div>
                        </div>
                        <pre>${JSON.stringify(data, null, 2)}</pre>
                    </div>
                `;
            } catch (error) {
                console.error('‚ùå Error cargando velocidades:', error);
                resultDiv.innerHTML = `
                    <div class="result">
                        <h3>‚ùå Error</h3>
                        <pre>${error.message}</pre>
                    </div>
                `;
            }
        }

        // Test 2: Detecci√≥n de tipo
        function testDeteccionTipo() {
            const tipo = document.getElementById('tipoElemento').value;
            console.log(`üîç Detectando tipo para: ${tipo}`);
            const resultDiv = document.getElementById('resultDeteccion');
            
            // Simular elemento
            const elementoSimulado = {
                options: {
                    tipo: tipo,
                    designacion: 'Test'
                }
            };
            
            const datos = window.obtenerVelocidadElemento(elementoSimulado);
            
            resultDiv.innerHTML = `
                <div class="result">
                    <h3>üìä Resultado</h3>
                    <div>
                        <div class="metric">
                            <div class="metric-label">Tipo Detectado</div>
                            <div class="metric-value">${datos.tipoMovimiento}</div>
                        </div>
                        <div class="metric">
                            <div class="metric-label">Velocidad</div>
                            <div class="metric-value">${datos.velocidad}</div>
                            <div class="metric-unit">km/h</div>
                        </div>
                        <div class="metric">
                            <div class="metric-label">Consumo</div>
                            <div class="metric-value">${datos.consumo}</div>
                            <div class="metric-unit">L/km</div>
                        </div>
                        <div class="metric">
                            <div class="metric-label">Capacidad</div>
                            <div class="metric-value">${datos.capacidad}</div>
                            <div class="metric-unit">L</div>
                        </div>
                    </div>
                    <p><strong>Descripci√≥n:</strong> ${datos.descripcion}</p>
                    <pre>${JSON.stringify(datos, null, 2)}</pre>
                </div>
            `;
        }

        // Test 3: Elemento completo
        function testElementoCompleto() {
            const designacion = document.getElementById('designacion').value;
            const tipo = document.getElementById('tipoCompleto').value;
            const dependencia = document.getElementById('dependencia').value;
            
            console.log(`üéØ Simulando elemento: ${designacion} (${tipo})`);
            
            const elemento = {
                options: {
                    designacion: designacion,
                    tipo: tipo,
                    dependencia: dependencia,
                    sidc: 'SJGPUCRVA--E---',
                    equipo: 'azul'
                }
            };
            
            const datos = window.obtenerVelocidadElemento(elemento);
            const resultDiv = document.getElementById('resultElemento');
            
            resultDiv.innerHTML = `
                <div class="result">
                    <h3>üéØ Elemento Simulado</h3>
                    <p><strong>Designaci√≥n:</strong> ${designacion}</p>
                    <p><strong>Tipo Original:</strong> ${tipo}</p>
                    <p><strong>Dependencia:</strong> ${dependencia}</p>
                    <hr>
                    <div>
                        <div class="metric">
                            <div class="metric-label">Tipo Movimiento</div>
                            <div class="metric-value">${datos.tipoMovimiento}</div>
                        </div>
                        <div class="metric">
                            <div class="metric-label">Velocidad Base</div>
                            <div class="metric-value">${datos.velocidad}</div>
                            <div class="metric-unit">km/h</div>
                        </div>
                        <div class="metric">
                            <div class="metric-label">Consumo Base</div>
                            <div class="metric-value">${datos.consumo}</div>
                            <div class="metric-unit">L/km</div>
                        </div>
                    </div>
                </div>
            `;
        }

        // Test 4: C√°lculo de marcha
        function testCalculoMarcha() {
            const tipoUnidad = document.getElementById('tipoUnidadMarcha').value;
            const distanciaKm = parseFloat(document.getElementById('distanciaKm').value);
            const factorTerreno = parseFloat(document.getElementById('factorTerreno').value);
            
            console.log(`üö∂ Calculando marcha: ${distanciaKm} km con factor ${factorTerreno}`);
            
            // Obtener velocidades base
            const velocidadesBase = window.MAIRA?.velocidadesBase;
            if (!velocidadesBase) {
                alert('‚ö†Ô∏è Primero debes cargar las velocidades base (Test 1)');
                return;
            }
            
            let velocidadBase = 4; // Fallback
            let consumoBase = 0;
            
            if (velocidadesBase.vehiculos && velocidadesBase.vehiculos[tipoUnidad]) {
                velocidadBase = velocidadesBase.vehiculos[tipoUnidad].velocidadPromedio;
                consumoBase = velocidadesBase.vehiculos[tipoUnidad].consumoPromedio;
            } else if (velocidadesBase.personal && velocidadesBase.personal[tipoUnidad]) {
                velocidadBase = velocidadesBase.personal[tipoUnidad].velocidadPromedio;
                consumoBase = velocidadesBase.personal[tipoUnidad].consumoPromedio;
            }
            
            // C√°lculos
            const velocidadAjustada = velocidadBase / factorTerreno;
            const tiempoHoras = distanciaKm / velocidadAjustada;
            const tiempoMinutos = tiempoHoras * 60;
            const combustibleTotal = distanciaKm * consumoBase * factorTerreno;
            
            const resultDiv = document.getElementById('resultMarcha');
            
            resultDiv.innerHTML = `
                <div class="result">
                    <h3>üö∂ C√°lculo de Marcha</h3>
                    <p><strong>Par√°metros de Entrada:</strong></p>
                    <ul>
                        <li>Tipo: ${tipoUnidad}</li>
                        <li>Distancia: ${distanciaKm} km</li>
                        <li>Factor Terreno: ${factorTerreno}x</li>
                        <li>Velocidad Base: ${velocidadBase} km/h</li>
                        <li>Consumo Base: ${consumoBase} L/km</li>
                    </ul>
                    <hr>
                    <h3>üìä Resultados:</h3>
                    <div>
                        <div class="metric">
                            <div class="metric-label">Velocidad Ajustada</div>
                            <div class="metric-value">${velocidadAjustada.toFixed(1)}</div>
                            <div class="metric-unit">km/h</div>
                        </div>
                        <div class="metric">
                            <div class="metric-label">Tiempo Estimado</div>
                            <div class="metric-value">${tiempoMinutos.toFixed(0)}</div>
                            <div class="metric-unit">min (${tiempoHoras.toFixed(2)} h)</div>
                        </div>
                        <div class="metric">
                            <div class="metric-label">Combustible</div>
                            <div class="metric-value">${combustibleTotal.toFixed(1)}</div>
                            <div class="metric-unit">litros</div>
                        </div>
                    </div>
                </div>
            `;
            
            console.log(`‚úÖ C√°lculo completado: ${tiempoMinutos.toFixed(0)} min, ${combustibleTotal.toFixed(1)} L`);
        }

        // Auto-cargar al inicio
        window.addEventListener('load', async () => {
            const statusDiv = document.getElementById('loadStatus');
            statusDiv.innerHTML = '<span class="status warning">Cargando...</span>';
            
            try {
                await testCargarVelocidades();
                statusDiv.innerHTML = '<span class="status ok">‚úÖ Sistema Listo</span>';
            } catch (error) {
                statusDiv.innerHTML = '<span class="status error">‚ùå Error al cargar</span>';
            }
        });
    </script>
</body>
</html>
